/arrow_size 5 def
/arrow_width 0.8 def

/showVector {
	/y exch def
	/x exch def
	/y0 exch def
	/x0 exch def
	/dx x x0 sub def
	/dy y y0 sub def
	/value dy sq dx sq add sqrt def
	/ex dx value div def
	/ey dy value div def
	newpath
	x0 y0 moveto 
	x y lineto
	
	arrow_size ex mul neg arrow_width ey mul add
	arrow_size ey mul neg arrow_width ex mul sub
	rlineto
	arrow_width ey -2 mul mul
	arrow_width ex 2 mul mul
	rmoveto
	x y lineto
	stroke
} def

/baseline {
	0.8 setlinewidth
} bind def

/fineline {
	0.4 setlinewidth
} bind def