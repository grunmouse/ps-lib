%!PS-Adobe-1.0

/in2mm{
	% По умолчанию, постскрипт использует единицу измерения 1 пункт=1/72 дюйма, 
	% а нам нравятся миллиметры.
	72 25.4 div           % 1 мм = 72/25.4 пунктов
	dup                   % дублировать значение на вершине стека
	scale                 % растянуть в это количество раз по обеим координатам
} def

%0.4 setlinewidth	% установить толщину линии по стандарту для сплошной основной

%начало отсчёта расположено в левом нижнем углу формата

/a4-width 210 def
/a4-height 297 def

/a4-frame {
	newpath
		20 5 moveto
		
		205 5 lineto
		
		205 292 lineto
		
		20 292 lineto
		
		20 5 lineto
	stroke

	20 5 translate %переставляем начало отсчёта на нижний левый угол штампа
} def

/a4-stamp-55 {
	newpath
		0 55 moveto 185 55 lineto
	stroke
	newpath
		65 0 moveto 0 55 rlineto
		70 0 rmoveto 0 -55 rlineto
	stroke
	newpath
		0 5 moveto 65 0 rlineto
		0 10 moveto 65 0 rlineto
		0 15 moveto 185 0 rlineto
		0 20 moveto 65 0 rlineto
		0 25 moveto 65 0 rlineto
		0 30 moveto 65 0 rlineto
		0 35 moveto 65 0 rlineto
		0 40 moveto 185 0 rlineto
		0 45 moveto 65 0 rlineto
		0 50 moveto 65 0 rlineto
	stroke
	newpath
		7 30 moveto 7 55 lineto
		10 0 rmoveto 0 -55 rlineto
		23 0 rmoveto 0 55 rlineto
		15 0 rmoveto 0 -55 rlineto
	stroke
	
	newpath
		65 70 add
		15 5 add
		moveto
		50 0 rlineto
		0 15 rmoveto
		-50 0 rlineto
	stroke
	newpath
		65 70 add 5 add
		15 5 add
		moveto
		0 15 rlineto
		5 0 rmoveto
		0 -15 rlineto
		5 0 rmoveto
		0 20 rlineto
		17 0 rmoveto
		0 -20 rlineto
		65 70 add 20 add
		15
		moveto
		0 5 rlineto
	stroke
	
	newpath
		0 
		297 10 sub
		moveto
		0 -14 rmoveto
		70 0 rlineto
		0 14 rlineto
	stroke
	
	0 55 translate %переставляем начало отсчёта на нижний левый угол штампа
} def
